@using Microsoft.CodeAnalysis.VisualBasic.Syntax
@model List<ProfileMatching.Models.ViewModels.UserViewModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://unpkg.com/tailwindcss^2/dist/tailwind.min.css" rel="stylesheet">
    <style>
    .side-nav {
      background-color: #343a40;
      height: 100%;
      position: fixed;
      top: 56px;
      left: 0;
      width: 200px;
      overflow-x: hidden;
      padding-top: 40px;
    }
    .side-nav a {
      color: white;
      padding: 10px 20px;
      display: block;
      text-decoration: none;
    }
    .main-content {
      margin-left: 200px;
      padding: 56px 20px 0 20px;
    }
  </style>
    <title>User Dashboard</title>
</head>
<body class="bg-gray-100">
<nav class="bg-gray-900 shadow py-4">
    <div class="container mx-auto px-6">
        <a class="text-white text-2xl font-medium" href="#">User Dashboard</a>
    </div>
</nav>
<div class="side-nav">
    <a href="#" class="text-white block py-2">Home</a>
    <a href="#" class="text-white block py-2">Users</a>
</div>
<div class="main-content container mx-auto px-6 py-12">
    <table class="table-auto w-full">
        <thead>
        <tr class="bg-gray-800 text-white">
            <th class="px-4 py-2">Name</th>
            <th class="px-4 py-2">Gender</th>
            <th class="px-4 py-2">Age</th>
            <th class="px-4 py-2">Bio</th>
            <th class="px-4 py-2">Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var user in Model)
        {
            <tr class="bg-white">
                <td class="border px-4 py-2">@user.Name</td>
                <td class="border px-4 py-2">@user.Gender</td>
                <td class="border px-4 py-2">@user.Age</td>
                <td class="border px-4 py-2">@user.Bio</td>
                <td class="border px-4 py-2">
                    <button asp-route-id="@user.Id" asp-action="Delete" asp-controller="Home" class="bg-red-500 text-white px-4 py-2 rounded-lg delete-user" data-user-id="1">Delete</button>
                </td>
            </tr>
        }

        </tbody>
    </table>
</div>
</body>