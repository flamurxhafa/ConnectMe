@using Microsoft.AspNetCore.Mvc.Formatters
@model ProfileMatching.Models.ViewModels.UserViewModel

@{
    Layout = "_Layout";
}

<div class="container">
    <div class="main-body">
        <div class="row">
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="https://bootdey.com/img/Content/avatar/avatar6.png" alt="Admin" class="rounded-circle p-1 bg-primary" width="110">
                            <div class="mt-3">
                                <h4>@Model.Name @Model.Lastname</h4>
                                <p class="text-secondary mb-1">@Model.Gender</p>
                                <p class="text-muted font-size-sm">@Model.Age y</p>
                            </div>
                        </div>
                        <hr class="my-4">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-twitter me-2 icon-inline text-info">
                                        <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path>
                                    </svg>Twitter
                                </h6>
                                <span class="text-secondary"></span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-instagram me-2 icon-inline text-danger">
                                        <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
                                    </svg>Instagram
                                </h6>
                                <span class="text-secondary">bootdey</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-facebook me-2 icon-inline text-primary">
                                        <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
                                    </svg>Facebook
                                </h6>
                                <span class="text-secondary">bootdey</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body">
                        <form method="post" asp-controller="Home" asp-action="Edit">
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Full Name</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input asp-for="@Model.Fullname" name="fullname" id="fullname" type="text" class="form-control" value="@Model.Name @Model.Lastname">
                                    <span asp-validation-for="Fullname"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Email</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" asp-for="@Model.Email" name="email" id="email" class="form-control" value="@Model.Email">
                                    <span asp-validation-for="Email"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Type</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input typeRadioButtons" onload="SetChecked(this)" type="radio" name="typeOptions" id="normalRadio" value="normal">
                                        <label class="form-check-label" for="normalRadio">Normal</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input typeRadioButtons" onload="SetChecked(this)" type="radio" name="typeOptions" id="businessmanRadio" value="business">
                                        <label class="form-check-label" for="businessmanRadio">Business</label>
                                    </div>
                                    <input type="text" asp-for="Type" name="type" value="" id="typeInput" hidden>
                                    <span asp-validation-for="Type"></span>
                                </div>
                            </div>


                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Age</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input asp-for="Age" name="age" id="age" type="text" class="form-control" value="@Model.Age">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Height</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input asp-for="Height" type="text" class="form-control" value="@Model.Height">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Bio</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input asp-for="Bio" type="text" class="form-control" value="@Model.Bio">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-3"></div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="submit" id="submitUpdate" class="btn btn-primary px-4" value="Save Changes">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<!-- Optional JavaScript -->
<script >
    window.addEventListener('load', () => {
        let normal = document.getElementById('normalRadio');
        let typeValue =document.getElementById('typeInput').value; 
        
        if(typeValue === 'normal'){
            normal.checked = true;
        }
        else if (typeValue === 'business'){
            document.getElementById('businessmanRadio').checked = true;
        }
    })

    let submit = document.getElementById('submitUpdate');
    submit.addEventListener('click', () => {
        let typeInput = document.getElementById('typeInput'); 
        let radioButtons = document.getElementsByClassName('typeRadioButtons');
        
        for (let i = 0; i<radioButtons.length; i++){
            if (radioButtons[i].checked){
                typeInput.value = radioButtons[i].value;
                console.log(radioButtons[i].value)
            }
        }
    })
    
</script>
